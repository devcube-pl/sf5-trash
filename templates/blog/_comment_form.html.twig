{{ form_start(form, {method: 'POST', action: path('comment_new', {'postSlug': post.slug})}) }}
<fieldset>
    <legend>
        <i class="fa fa-comment" aria-hidden="true"></i> Dodaj komentarz
    </legend>

    {{ form_errors(form) }}

    <div class="form-group {% if not form.content.vars.valid %}has-error{% endif %}">
        {{ form_label(form.content, 'Tw√≥j komentarz') }}

        {{ form_errors(form.content) }}

        {{ form_widget(form.content, {attr: {rows: 10}}) }}
        {{ form_help(form.content) }}
    </div>

    <div class="form-group">
        <button class="btn btn-primary pull-right" type="submit">
            <i class="fa fa-paper-plane" aria-hidden="true"></i> Skomentuj
        </button>
    </div>
</fieldset>
{{ form_end(form) }}